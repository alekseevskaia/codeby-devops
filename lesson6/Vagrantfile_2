    v.gui = false
  end

  config.vm.define "client" do |client|
    config.vm.box = "alvistack/ubuntu-24.04"
    config.vm.box_version = "20251010.1.3"
  end

  config.vm.define "server" do |server|
    config.vm.box = "alvistack/ubuntu-24.04"
    config.vm.box_version = "20251010.1.3"
  end
end
